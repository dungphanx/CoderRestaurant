<h3>Thankyou for using our service</h3>


<div class="row">
  <div class="col-xs-6">
    <table class="table price-table">
      <tbody>
        <tr>
          <td>Total food price</td>
          <td><%= @order.food_item.price %></td>
        </tr>
        <tr>
          <td>Deliver fee</td>
          <td><%= @order.delivery_fee %></td>
        </tr>
        <tr>
          <td>Discount</td>
          <td><%= @order.discount %></td>
        </tr>
        <tr class="total-price">
          <td>Total</td>
          <td><%= @order.total_price %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="col-xs-6">
    <table class="table">
      <tbody>
        <tr>
          <td>Name</td>
          <td><%= @order.name %></td>
        </tr>
        <tr>
          <td>Phone</td>
          <td><%= @order.phone %></td>
        </tr>
        <tr>
          <td>Address</td>
          <td><%= @order.address %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
<%= link_to "Back to menu", menu_path, class: 'btn btn-secondary' %>