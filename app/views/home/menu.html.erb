<% Section.all.each do |section| %>
	<div class="btn-group" role="group" aria-label="Basic example">
	  <%= link_to section, menu_path(section: section), class: 'btn btn-secondary' %>
	</div>
<% end %>

<% @food_items.each do |food_item| %>
	<div class="row">
		<div class="col-xs-4">
			<%= image_tag food_item.image_url %>
		</div>
		<div class="col-xs-8">
			<%= link_to food_item do %>
			<h4 class="card-title"><%= food_item.name %></h4>
			<% end %>
			<p><%= food_item.description %></p>
			<h5 class="card-title">Price: <%= food_item.price %></h5>

			<%= link_to 'Order', new_food_item_order_path(food_item), class: 'card-link btn btn-danger' %>
		</div>
	</div>
<% end %>

<%= paginate @food_items %>